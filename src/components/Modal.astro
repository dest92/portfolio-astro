---
interface Props {
  id: string;
  certificate: {
    id: string;
    src: string;
    description: string;
    platform: string;
    fecha: string;
    category: string;
    level: string;
    skills: string[];
    duration: string;
    credentialID: string;
  };
}

const { id, certificate } = Astro.props;

const getCategoryColor = (category: string) => {
  switch (category) {
    case "cybersecurity":
      return "cyber-category-security";
    case "development":
      return "cyber-category-dev";
    case "networking":
      return "cyber-category-network";
    default:
      return "cyber-category-default";
  }
};

const getLevelIcon = (level: string) => {
  switch (level) {
    case "beginner":
      return "▲";
    case "intermediate":
      return "▲▲";
    case "advanced":
      return "▲▲▲";
    default:
      return "▲";
  }
};

const getLevelColor = (level: string) => {
  switch (level) {
    case "beginner":
      return "cyber-level-beginner";
    case "intermediate":
      return "cyber-level-intermediate";
    case "advanced":
      return "cyber-level-advanced";
    default:
      return "cyber-level-default";
  }
};
---

<dialog
  id={id}
  class="modal backdrop:bg-black/80 backdrop:backdrop-blur-sm bg-transparent p-4 max-w-6xl w-full max-h-[95vh] overflow-y-auto rounded-2xl border border-[#00ff41]/50 shadow-2xl shadow-[#00ff41]/20 mobile-modal-scroll"
>
  <div
    class="relative bg-[#050505] rounded-xl overflow-hidden border border-[#00ff41]/30 backdrop-blur-lg"
  >
    {/* Cyber Circuit Background */}
    <div class="absolute inset-0 opacity-20 pointer-events-none">
      <div
        class="absolute inset-0 bg-[linear-gradient(0deg,transparent_24%,rgba(0,255,65,0.1)_25%,rgba(0,255,65,0.1)_26%,transparent_27%,transparent_74%,rgba(0,255,65,0.1)_75%,rgba(0,255,65,0.1)_76%,transparent_77%,transparent),linear-gradient(90deg,transparent_24%,rgba(0,255,65,0.1)_25%,rgba(0,255,65,0.1)_26%,transparent_27%,transparent_74%,rgba(0,255,65,0.1)_75%,rgba(0,255,65,0.1)_76%,transparent_77%,transparent)] bg-[size:20px_20px]"
      >
      </div>
    </div>

    {/* Header */}
    <div class="relative p-6 border-b border-[#00ff41]/30">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500 animate-pulse"></div>
            <div
              class="w-3 h-3 rounded-full bg-yellow-500 animate-pulse"
              style="animation-delay: 0.5s"
            >
            </div>
            <div
              class="w-3 h-3 rounded-full bg-[#00ff41] animate-pulse"
              style="animation-delay: 1s"
            >
            </div>
          </div>
          <h2 class="text-xl font-bold text-[#00ff41] font-mono tracking-wide">
            [CERTIFICATE_ACCESS_GRANTED]
          </h2>
        </div>
        <button
          class="cyber-close-btn group relative bg-red-500/10 backdrop-blur-sm rounded-full p-3 text-red-500 hover:text-red-400 transition-all duration-300 border border-red-500/50 hover:border-red-500/80 hover:shadow-lg hover:shadow-red-500/30 mobile-close-btn"
          onclick="window.closeModalWithAnimation(this.closest('dialog'))"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-6 h-6 transition-transform duration-300 group-hover:rotate-90"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    {/* Content */}
    <div class="relative p-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mobile-modal-layout">
        {/* Certificate Image */}
        <div class="relative group">
          <div
            class="relative rounded-xl overflow-hidden border-2 border-[#00ff41]/30 hover:border-[#00ff41]/60 transition-all duration-500 cyber-glow-image"
          >
            <img
              src={certificate.src}
              alt={`Certificado de ${certificate.description}`}
              class="w-full h-auto object-cover transition-transform duration-500 group-hover:scale-105"
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-slate-900/30 via-transparent to-transparent"
            >
            </div>

            {/* Scan Line Effect */}
            <div
              class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"
            >
              <div
                class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-[#00ff41]/80 to-transparent animate-scan-horizontal"
              >
              </div>
            </div>
          </div>
        </div>

        {/* Certificate Details */}
        <div class="space-y-6">
          {/* Title */}
          <div class="space-y-2">
            <h3 class="text-2xl font-bold text-white font-mono tracking-wide">
              {certificate.description}
            </h3>
            <div class="flex items-center gap-3">
              <span
                class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-bold border ${getCategoryColor(certificate.category)} font-mono uppercase tracking-wider shadow-lg`}
              >
                {certificate.platform}
              </span>
              <span
                class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-[#00ff41]/10 text-[#00ff41] border border-[#00ff41]/50 font-mono uppercase`}
              >
                {certificate.category}
              </span>
            </div>
          </div>

          {/* Level & Status */}
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="space-y-2">
              <label
                class="text-sm font-mono text-[#00ff41] uppercase tracking-widest"
                >LEVEL</label
              >
              <div class="flex items-center gap-2">
                <span
                  class={`text-lg font-bold font-mono ${getLevelColor(certificate.level)}`}
                >
                  {getLevelIcon(certificate.level)}
                </span>
                <span
                  class={`text-sm font-bold font-mono uppercase ${getLevelColor(certificate.level)}`}
                >
                  {certificate.level}
                </span>
              </div>
            </div>
            <div class="space-y-2">
              <label
                class="text-sm font-mono text-[#00ff41] uppercase tracking-widest"
                >STATUS</label
              >
              <div class="flex items-center gap-2">
                <span
                  class="inline-block w-3 h-3 bg-[#00ff41] rounded-full animate-pulse"
                ></span>
                <span class="text-sm font-bold font-mono text-[#00ff41]"
                  >VERIFIED</span
                >
              </div>
            </div>
          </div>

          {/* Metadata */}
          <div class="space-y-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div class="space-y-2">
                <label
                  class="text-sm font-mono text-[#00ff41] uppercase tracking-widest"
                  >ISSUED</label
                >
                <div class="text-white font-mono">
                  <span class="text-[#00ff41]">[</span>
                  {certificate.fecha}
                  <span class="text-[#00ff41]">]</span>
                </div>
              </div>
              <div class="space-y-2">
                <label
                  class="text-sm font-mono text-[#00ff41] uppercase tracking-widest"
                  >DURATION</label
                >
                <div class="text-[#00ff41] font-mono font-bold">
                  {certificate.duration}
                </div>
              </div>
            </div>

            <div class="space-y-2">
              <label
                class="text-sm font-mono text-[#00ff41] uppercase tracking-widest"
                >CREDENTIAL ID</label
              >
              <div
                class="bg-black/50 backdrop-blur-sm rounded-lg p-3 border border-[#00ff41]/30"
              >
                <code class="text-sm font-mono text-[#00ff41] break-all">
                  {certificate.credentialID}
                </code>
              </div>
            </div>
          </div>

          {/* Skills */}
          <div class="space-y-3">
            <label
              class="text-sm font-mono text-[#00ff41] uppercase tracking-widest"
              >SKILLS ACQUIRED</label
            >
            <div class="flex flex-wrap gap-2">
              {
                certificate.skills.map((skill) => (
                  <span class="px-3 py-2 bg-[#00ff41]/10 text-[#00ff41] text-sm rounded-lg border border-[#00ff41]/30 font-mono hover:border-[#00ff41]/60 transition-all duration-300 hover:shadow-lg hover:shadow-[#00ff41]/20">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>

          {/* Actions */}
          <div class="flex flex-col sm:flex-row gap-3 pt-4">
            <button
              class="cyber-button flex-1 bg-[#00ff41]/10 text-[#00ff41] border-[#00ff41]/50 hover:bg-[#00ff41]/20 hover:border-[#00ff41]/80"
              onclick="window.startVerificationProcess()"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
              </svg>
              <span class="font-mono">VERIFY ONLINE</span>
            </button>
            <button
              class="cyber-button flex-1 bg-white/5 text-white border-white/20 hover:bg-white/10 hover:border-white/40"
              onclick="window.print()"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"
                ></path>
              </svg>
              <span class="font-mono">DOWNLOAD</span>
            </button>
          </div>
        </div>
      </div>
    </div>

    {/* Footer */}
    <div class="relative p-6 border-t border-[#00ff41]/30">
      <div class="flex items-center justify-between flex-wrap gap-4">
        <div class="flex items-center gap-2 text-sm text-gray-400">
          <div class="w-2 h-2 bg-[#00ff41] rounded-full animate-pulse"></div>
          <span class="font-mono">SECURE_CONNECTION_ESTABLISHED</span>
        </div>
        <div class="text-sm text-gray-400 font-mono">
          <span class="text-[#00ff41]">[</span>
          AUTHENTICATED
          <span class="text-[#00ff41]">]</span>
        </div>
      </div>
    </div>

    {/* Corner Decorations */}
    <div
      class="absolute top-0 left-0 w-8 h-8 border-t-2 border-l-2 border-[#00ff41]/50"
    >
    </div>
    <div
      class="absolute top-0 right-0 w-8 h-8 border-t-2 border-r-2 border-[#00ff41]/50"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-8 h-8 border-b-2 border-l-2 border-[#00ff41]/50"
    >
    </div>
    <div
      class="absolute bottom-0 right-0 w-8 h-8 border-b-2 border-r-2 border-[#00ff41]/50"
    >
    </div>
  </div>
</dialog>

<script>
  // Inicializar modales después de que se abra uno
  function initializeModal(modalId: string) {
    const modal = document.getElementById(modalId) as HTMLDialogElement;
    if (!modal) return;

    // Manejar clic en el botón de cerrar
    const closeButton = modal.querySelector(".cyber-close-btn");
    closeButton?.addEventListener("click", (e) => {
      e.preventDefault();
      (window as any).closeModalWithAnimation(modal);
    });

    // Manejar clic fuera del modal
    modal.addEventListener("click", (e) => {
      if (e.target === modal) {
        (window as any).closeModalWithAnimation(modal);
      }
    });

    // Manejar tecla ESC
    modal.addEventListener("cancel", (e) => {
      e.preventDefault();
      (window as any).closeModalWithAnimation(modal);
    });

    // Prevenir scroll cuando el modal está abierto
    modal.addEventListener("close", () => {
      document.documentElement.style.overflow = "";
    });

    modal.addEventListener("show", () => {
      document.documentElement.style.overflow = "hidden";
    });
  }

  // Función global para abrir modal (disponible para otros scripts)
  (window as any).openCertificateModal = function (modalId: string) {
    const modal = document.getElementById(modalId) as HTMLDialogElement;
    if (modal) {
      // Inicializar el modal si no se ha hecho
      initializeModal(modalId);
      modal.showModal();
    }
  };

  // Manejar eventos globales
  document.addEventListener("DOMContentLoaded", () => {
    // Inicializar todos los modales existentes
    const modals = document.querySelectorAll("dialog");
    modals.forEach((modal) => {
      if (modal.id) {
        initializeModal(modal.id);
      }
    });
  });
</script>

<style>
  /* Variables locales para estilos dinámicos */
  .cyber-category-security {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    border: 1px solid #ef4444;
  }

  .cyber-category-dev {
    background: rgba(6, 182, 212, 0.1);
    color: #06b6d4;
    border: 1px solid #06b6d4;
  }

  .cyber-category-network {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
    border: 1px solid #22c55e;
  }

  .cyber-category-default {
    background: rgba(168, 85, 247, 0.1);
    color: #a855f7;
    border: 1px solid #a855f7;
  }

  .cyber-level-beginner {
    color: #22c55e;
  }

  .cyber-level-intermediate {
    color: #eab308;
  }

  .cyber-level-advanced {
    color: #ef4444;
  }

  .cyber-level-default {
    color: #9ca3af;
  }

  /* Animaciones y estilos del modal */
  .modal {
    animation: modal-appear 0.3s ease-out;
  }

  .modal.closing {
    animation: modal-disappear 0.3s ease-in;
  }

  @keyframes modal-appear {
    from {
      opacity: 0;
      transform: scale(0.9) translateY(-20px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  @keyframes modal-disappear {
    from {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
    to {
      opacity: 0;
      transform: scale(0.9) translateY(-20px);
    }
  }

  .cyber-glow-image {
    box-shadow:
      0 0 20px rgba(0, 255, 65, 0.2),
      inset 0 0 20px rgba(0, 255, 65, 0.1);
  }

  .cyber-glow-image:hover {
    box-shadow:
      0 0 30px rgba(0, 255, 65, 0.4),
      0 0 60px rgba(0, 255, 65, 0.2),
      inset 0 0 30px rgba(0, 255, 65, 0.15);
  }

  .cyber-button {
    @apply px-6 py-3 rounded-lg font-bold text-sm border transition-all duration-300 flex items-center justify-center backdrop-blur-sm;
  }

  .cyber-button:hover {
    @apply shadow-lg transform translate-y-[-2px];
  }

  @keyframes scan-horizontal {
    0% {
      transform: translateX(-100%);
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: translateX(100%);
      opacity: 0;
    }
  }

  .animate-scan-horizontal {
    animation: scan-horizontal 2s ease-in-out infinite;
  }

  dialog::backdrop {
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(8px);
    transition: all 0.3s ease;
  }

  dialog.closing::backdrop {
    opacity: 0;
    backdrop-filter: blur(0);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .modal {
      max-width: 95vw;
      max-height: 95vh;
      margin: 0.5rem;
      padding: 0.5rem;
    }

    .grid-cols-1.lg\\:grid-cols-2 {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .grid-cols-1.sm\\:grid-cols-2 {
      grid-template-columns: 1fr;
    }

    .flex-col.sm\\:flex-row {
      flex-direction: column;
    }

    .modal .p-6 {
      padding: 1rem;
    }

    .modal .text-2xl {
      font-size: 1.25rem;
    }

    .modal .text-xl {
      font-size: 1.125rem;
    }

    .modal .space-y-6 {
      gap: 1rem;
    }

    .modal .space-y-4 {
      gap: 0.75rem;
    }

    .modal .space-y-3 {
      gap: 0.5rem;
    }

    .modal .cyber-button {
      padding: 0.75rem 1rem;
      font-size: 0.875rem;
    }

    .mobile-close-btn {
      min-width: 44px;
      min-height: 44px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .modal {
      margin: 0.25rem;
      max-width: calc(100vw - 0.5rem);
      max-height: calc(100vh - 0.5rem);
    }

    .modal .p-6 {
      padding: 0.75rem;
    }

    .modal .text-2xl {
      font-size: 1.125rem;
    }

    .modal .text-xl {
      font-size: 1rem;
    }

    .modal .cyber-button {
      padding: 0.5rem 0.75rem;
      font-size: 0.75rem;
    }

    .mobile-close-btn {
      min-width: 48px;
      min-height: 48px;
    }
  }

  /* Touch adjustments */
  @media (hover: none) and (pointer: coarse) {
    .modal .cyber-button:hover {
      transform: none;
    }

    .modal .cyber-button:active {
      transform: scale(0.98);
    }
  }

  .mobile-modal-layout {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  @media (min-width: 1024px) {
    .mobile-modal-layout {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .mobile-modal-layout .group {
      order: -1;
    }

    .mobile-modal-layout .space-y-6 {
      order: 1;
    }
  }

  .mobile-modal-scroll {
    -webkit-overflow-scrolling: touch;
    overscroll-behavior: contain;
  }
</style>
