---
import NextJS from "./icons/NextJSIcon.astro";
import Tailwind from "./icons/TailwindIcon.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import SupabaseIcon from "./icons/SupabaseIcon.astro";
import BracketIcon from "./icons/BracketIcon.astro";
import Link from "./icons/Link.astro";
import NestJS from "./icons/NestJSIcon.astro";
import { useTranslations } from "../i18n/utils";
import { ui } from "../i18n/ui";

const lang = (Astro.currentLocale || 'es') as keyof typeof ui;
const t = useTranslations(lang);

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "cyber-tag-next",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "cyber-tag-tailwind",
    icon: Tailwind,
  },
  REACT: {
    name: "React.js",
    class: "cyber-tag-react",
    icon: ReactIcon,
  },
  SUPABASE: {
    name: "Supabase",
    class: "cyber-tag-supabase",
    icon: SupabaseIcon,
  },
  ASTRO: {
    name: "Astro",
    class: "cyber-tag-astro",
    icon: BracketIcon,
  },
  NESTJS: {
    name: "NestJS",
    class: "cyber-tag-nestjs",
    icon: NestJS,
  },
};

const PROJECTS = [
  {
    title: "Agora Colab",
    description: t('projects.agora.description'),
    link: "https://agora-colab.vercel.app/",
    github: "https://github.com/dest92/agora-colab",
    image: "/projects/colab.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.NESTJS],
    featured: true,
  },
  {
    title: "Fake Profile Generator",
    description: t('projects.fake.description'),
    link: "https://fake-profile-generator.vercel.app",
    github: "https://github.com/dest92/fake-profile-generator",
    image: "/projects/fake.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
    featured: false,
  },
  {
    title: "Ez-IP",
    description: t('projects.ezip.description'),
    link: "https://ez-ip.vercel.app",
    github: "https://github.com/dest92/ez-ip",
    image: "/projects/ezip.jpeg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "GreenPrint Landing Page",
    description: t('projects.greenprint.landing.description'),
    link: "https://greenprint-landing.vercel.app/",
    github: "https://github.com/dest92/greenprint-landing",
    image: "/projects/landing.png",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
  {
    title: "GreenPrint Ecommerce",
    description: t('projects.greenprint.ecommerce.description'),
    link: "https://greenprint-ecommerce.vercel.app",
    github: "https://github.com/dest92/greenprint-ecommerce",
    image: "/projects/ecommerce.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Epic Clash - Juego de combates épicos",
    description: t('projects.epicclash.description'),
    link: "https://epic-clash.vercel.app/",
    github: "https://github.com/dest92/epic-clash",
    image: "/projects/EpicClash.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
    featured: true,
  },
  {
    title: "Ley de Bases - Votación en tiempo real",
    description: t('projects.leybases.description'),
    link: "https://ley-bases.vercel.app/",
    github: "https://github.com/dest92/ley-omnibus-voting",
    image: "/projects/bases.png",
    tags: [TAGS.TAILWIND, TAGS.REACT, TAGS.SUPABASE, TAGS.ASTRO],
  },
  {
    title: "Reload Landing Page",
    description: t('projects.reload.description'),
    link: "https://reload-landing.vercel.app/",
    github: "https://github.com/dest92/reload-landing",
    image: "/projects/reload.png",
    tags: [TAGS.TAILWIND, TAGS.REACT, TAGS.SUPABASE, TAGS.NEXT],
  },
  {
    title: "Fitlife Manager",
    description: t('projects.fitlifemanager.description'),
    image: "/projects/manager.png",
    tags: [TAGS.TAILWIND, TAGS.REACT, TAGS.SUPABASE, TAGS.NEXT],
  },
  {
    title: "Fitlife GO",
    description: t('projects.fitlifego.description'),
    image: "/projects/go.png",
    tags: [TAGS.TAILWIND, TAGS.REACT, TAGS.SUPABASE, TAGS.NEXT],
  },
];
---

<section class="cyber-projects-section">
  <div class="cyber-projects-grid">
    {PROJECTS.map(({ image, title, description, tags, link, github, featured }) => (
      <article class={`cyber-project-card ${featured ? 'cyber-project-featured' : ''}`}>
        
        <!-- Featured Badge -->
        {featured && (
          <div class="cyber-featured-badge">
            <span class="cyber-badge-text">PRIORITY_HIGH</span>
            <div class="cyber-badge-glow"></div>
          </div>
        )}
        
        <!-- Holographic Overlay -->
        <div class="cyber-holo-overlay"></div>
        
        <!-- Scanlines Effect -->
        <div class="cyber-scanlines"></div>
        
        <!-- Project Image -->
        <div class="cyber-image-container">
          <div class="cyber-image-frame">
            <img
              src={image}
              alt={`Captura de pantalla del proyecto ${title}`}
              class="cyber-project-image"
              loading="lazy"
            />
            <div class="cyber-image-overlay"></div>
          </div>
          
          <!-- Data Streams -->
          <div class="cyber-data-streams">
            <div class="cyber-stream"></div>
            <div class="cyber-stream"></div>
            <div class="cyber-stream"></div>
          </div>
        </div>

        <!-- Project Content -->
        <div class="cyber-project-content">
          
          <!-- Title -->
          <h3 class="cyber-project-title">
            &gt; {title}
          </h3>

          <!-- Tags -->
          <div class="cyber-tags-container">
            {tags.map((tag) => (
              <span class={`cyber-tag ${tag.class}`}>
                <tag.icon class="cyber-tag-icon" />
                <span class="cyber-tag-text">{tag.name}</span>
                <div class="cyber-tag-glow"></div>
              </span>
            ))}
          </div>

          <!-- Description -->
          <p class="cyber-project-description">
            {description}
          </p>

          <!-- Actions -->
          <div class="cyber-actions-container">
            {github && (
              <a
                href={github}
                target="_blank"
                rel="noopener"
                class="cyber-action-btn cyber-btn-github"
              >
                <span class="cyber-btn-text">SOURCE_CODE</span>
                <div class="cyber-btn-spark"></div>
              </a>
            )}
            {link && (
              <a
                href={link}
                target="_blank"
                rel="noopener"
                class="cyber-action-btn cyber-btn-demo"
              >
                <Link class="cyber-btn-icon" />
                <span class="cyber-btn-text">DEPLOY_URL</span>
                <div class="cyber-btn-spark"></div>
              </a>
            )}
          </div>
        </div>
        
        <!-- Cyber Frame -->
        <div class="cyber-frame">
          <div class="cyber-corner cyber-corner-tl"></div>
          <div class="cyber-corner cyber-corner-tr"></div>
          <div class="cyber-corner cyber-corner-bl"></div>
          <div class="cyber-corner cyber-corner-br"></div>
        </div>
        
      </article>
    ))}
  </div>
</section>

<style>
  /* Variables CSS alineadas */
  :root {
    --proj-primary: #00ff41;
    --proj-secondary: #008f11;
    --proj-bg: #0d0d0d;
    --proj-bg-card: rgba(10, 10, 10, 0.9);
    --proj-border: rgba(0, 255, 65, 0.3);
  }

  /* Sección principal */
  .cyber-projects-section {
    position: relative;
    padding: 2rem 0;
  }

  /* Grid de proyectos */
  .cyber-projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 3rem;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Card de proyecto */
  .cyber-project-card {
    position: relative;
    background: var(--proj-bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--proj-border);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    opacity: 0;
    transform: translateY(30px);
    animation: cyber-fade-in 0.8s cubic-bezier(0.23, 1, 0.32, 1) forwards;
    clip-path: polygon(
      0 0,
      calc(100% - 25px) 0,
       100% 25px,
      100% 100%,
      25px 100%,
      0 calc(100% - 25px)
    );
  }

  .cyber-project-card:nth-child(1) { animation-delay: 0.1s; }
  .cyber-project-card:nth-child(2) { animation-delay: 0.2s; }
  .cyber-project-card:nth-child(3) { animation-delay: 0.3s; }
  .cyber-project-card:nth-child(4) { animation-delay: 0.4s; }
  .cyber-project-card:nth-child(5) { animation-delay: 0.5s; }

  .cyber-project-card:hover {
    transform: translateY(-10px);
    border-color: var(--proj-primary);
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.2);
  }

  /* Featured projects */
  .cyber-project-featured {
    border-color: #00ff41;
    box-shadow: 0 0 10px rgba(0, 255, 65, 0.1);
  }

  /* Featured badge */
  .cyber-featured-badge {
    position: absolute;
    top: 15px;
    right: 15px;
    z-index: 10;
    background: rgba(0, 255, 65, 0.1);
    color: #00ff41;
    padding: 0.4rem 0.8rem;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: var(--terminal-font);
    border: 1px solid #00ff41;
  }

  /* Holographic overlay */
  .cyber-holo-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(0, 255, 65, 0.05) 50%,
      transparent 70%
    );
    transform: translateX(-100%);
    transition: transform 0.8s ease;
    z-index: 1;
    pointer-events: none;
  }

  .cyber-project-card:hover .cyber-holo-overlay {
    transform: translateX(100%);
  }

  /* Scanlines effect */
  .cyber-scanlines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(0, 255, 65, 0.02) 2px,
        rgba(0, 255, 65, 0.02) 4px
      );
    pointer-events: none;
    z-index: 2;
  }

  /* Image container */
  .cyber-image-container {
    position: relative;
    height: 200px;
    overflow: hidden;
    border-bottom: 1px solid var(--proj-border);
  }

  .cyber-project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.4s ease;
    filter: grayscale(100%) contrast(1.2) brightness(0.8);
  }

  .cyber-project-card:hover .cyber-project-image {
    transform: scale(1.05);
    filter: grayscale(0%) contrast(1.1) brightness(1);
  }

  .cyber-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 255, 65, 0.1);
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }

  .cyber-project-card:hover .cyber-image-overlay {
    opacity: 0;
  }

  /* Data streams */
  .cyber-data-streams {
    position: absolute;
    top: 0;
    right: 0;
    width: 4px;
    height: 100%;
    overflow: hidden;
  }

  .cyber-stream {
    position: absolute;
    width: 2px;
    height: 10px;
    background: var(--proj-primary);
    animation: cyber-stream-flow 2s linear infinite;
  }

  .cyber-stream:nth-child(1) { left: 0; animation-delay: 0s; }
  .cyber-stream:nth-child(2) { left: 2px; animation-delay: 0.7s; }

  /* Content */
  .cyber-project-content {
    position: relative;
    padding: 2rem;
    z-index: 3;
  }

  /* Title */
  .cyber-project-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: var(--terminal-font);
    margin: 0 0 1rem 0;
    text-shadow: 2px 2px 0px rgba(0, 255, 65, 0.3);
  }

  .cyber-project-card:hover .cyber-project-title {
    color: #00ff41;
  }

  /* Tags */
  .cyber-tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .cyber-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.3rem 0.8rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    font-family: var(--terminal-font);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #ccc;
  }
  
  .cyber-tag-icon {
    width: 14px;
    height: 14px;
  }

  /* Description */
  .cyber-project-description {
    color: #a0a0a0;
    line-height: 1.6;
    font-size: 0.9rem;
    margin: 0 0 2rem 0;
    font-family: var(--terminal-font);
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Actions */
  .cyber-actions-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .cyber-action-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: var(--terminal-font);
    text-decoration: none;
    border: 1px solid var(--proj-primary);
    transition: all 0.3s ease;
    background: rgba(0, 255, 65, 0.1);
    color: var(--proj-primary);
  }

  .cyber-action-btn:hover {
    background: var(--proj-primary);
    color: #000;
    box-shadow: 0 0 15px rgba(0, 255, 65, 0.4);
  }

  .cyber-btn-icon {
    width: 14px;
    height: 14px;
  }

  /* Frame */
  .cyber-frame {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .cyber-corner {
    position: absolute;
    width: 15px;
    height: 15px;
    border: 2px solid rgba(0, 255, 65, 0.5);
    transition: all 0.3s ease;
  }

  .cyber-corner-tl { top: 0; left: 0; border-right: none; border-bottom: none; }
  .cyber-corner-tr { top: 0; right: 0; border-left: none; border-bottom: none; }
  .cyber-corner-bl { bottom: 0; left: 0; border-right: none; border-top: none; }
  .cyber-corner-br { bottom: 0; right: 0; border-left: none; border-top: none; }

  .cyber-project-card:hover .cyber-corner {
    width: 25px;
    height: 25px;
    border-color: #00ff41;
  }

  /* Animaciones */
  @keyframes cyber-fade-in {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes cyber-stream-flow {
    0% {
      transform: translateY(-100%);
      opacity: 0;
    }
    100% {
      transform: translateY(200px);
      opacity: 0;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
     .cyber-projects-grid {
        grid-template-columns: 1fr;
        padding: 0 1rem;
     }
  }
</style>
