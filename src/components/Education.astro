---
import { useTranslations } from "../i18n/utils";
import { ui } from "../i18n/ui";

const lang = (Astro.currentLocale || "es") as keyof typeof ui;
const t = useTranslations(lang);
---

<section id="education" class="education-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">
        <span class="text-prefix">&gt;</span>
        <span class="glitch-text" data-text={t("education.title")}>
          {t("education.title")}
        </span>
      </h2>
      <div class="section-subtitle">[{t("education.subtitle")}]</div>
    </div>

    <div class="education-notification">
      <div class="notification-header">
        <div class="notification-dots">
          <span class="dot red"></span>
          <span class="dot yellow"></span>
          <span class="dot green"></span>
        </div>
        <span class="notification-title">{t("education.status.title")}</span>
      </div>
      <div class="notification-content">
        <span class="terminal-prompt">$</span>
        <span class="terminal-command">{t("education.command")}</span>
        <div class="terminal-output">
          <span class="output-line">{t("education.info")}</span>
          <span class="output-line">{t("education.degree")}</span>
          <span class="output-line">{t("education.period")}</span>
          <span class="output-line">{t("education.status")}</span>
          <span class="output-line">{t("education.progress")}</span>
          <span class="output-line"></span>
          <span class="output-line highlight">{t("education.completed")}</span>
          <span class="output-line">{t("education.completed.period")}</span>
          <span class="output-line success"
            >{t("education.completed.status")}</span
          >
        </div>
      </div>
      <div class="scanline"></div>
    </div>
  </div>
</section>

<style>
  :root {
    --edu-primary: #00ff41;
    --edu-bg: #050505;
    --edu-border: rgba(0, 255, 65, 0.3);
  }

  .education-section {
    padding: 6rem 0;
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 2;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    display: inline-block;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    color: #fff;
    font-family: var(--terminal-font);
    letter-spacing: -0.05em;
    text-transform: uppercase;
    margin: 0 0 1rem 0;
    position: relative;
  }

  .text-prefix {
    color: var(--edu-primary);
    margin-right: 0.5rem;
  }

  /* Glitch Text Effect Reused */
  .glitch-text {
    position: relative;
    display: inline-block;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .glitch-text::before {
    left: 2px;
    text-shadow: -1px 0 #ff00c1;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim-1 5s infinite linear alternate-reverse;
  }

  .glitch-text::after {
    left: -2px;
    text-shadow: -1px 0 #00fff9;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim-2 5s infinite linear alternate-reverse;
  }

  .section-subtitle {
    font-size: 1rem;
    color: var(--edu-primary);
    font-family: var(--terminal-font);
    letter-spacing: 0.1em;
    font-weight: 500;
    opacity: 0.8;
  }

  .education-notification {
    max-width: 700px;
    margin: 0 auto;
    background: rgba(10, 10, 10, 0.9);
    border: 1px solid var(--edu-border);
    border-radius: 6px;
    backdrop-filter: blur(10px);
    overflow: hidden;
    position: relative;
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.1);
    transition: all 0.3s ease;
  }

  .education-notification:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 30px rgba(0, 255, 65, 0.2);
    border-color: #00ff41;
  }

  .scanline {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      transparent 50%,
      rgba(0, 255, 65, 0.02) 50%
    );
    background-size: 100% 4px;
    pointer-events: none;
    z-index: 10;
  }

  .notification-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    background: rgba(0, 255, 65, 0.1);
    border-bottom: 1px solid var(--edu-border);
  }

  .notification-dots {
    display: flex;
    gap: 0.5rem;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .dot.red {
    background: #ff5f56;
  }
  .dot.yellow {
    background: #ffbd2e;
  }
  .dot.green {
    background: #27c93f;
  }

  .notification-title {
    font-family: var(--terminal-font);
    font-size: 0.8rem;
    color: #00ff41;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .notification-content {
    padding: 1.5rem;
    font-family: var(--terminal-font);
    font-size: 1rem;
    line-height: 1.6;
    color: #e0e0e0;
  }

  .terminal-prompt {
    color: #00ff41;
    font-weight: bold;
    margin-right: 0.5rem;
  }

  .terminal-command {
    color: #fff;
    font-weight: 600;
  }

  .terminal-output {
    margin-top: 1rem;
    padding-left: 1rem;
    border-left: 2px solid rgba(0, 255, 65, 0.2);
  }

  .output-line {
    display: block;
    color: #a0a0a0;
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
  }

  .output-line.highlight {
    color: #fff;
    font-weight: 700;
    margin-top: 0.5rem;
  }

  .output-line.success {
    color: #00ff41;
    font-weight: 700;
    text-shadow: 0 0 5px rgba(0, 255, 65, 0.5);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .education-section {
      padding: 4rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .education-notification {
      margin: 0 1rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .notification-content {
      padding: 1rem;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .education-section {
      padding: 3rem 0;
    }

    .container {
      padding: 0 0.5rem;
    }

    .education-notification {
      margin: 0 0.5rem;
    }
  }
</style>
