---
interface Props {
  visits: number;
}

import { useTranslations } from "../i18n/utils";
import { ui } from "../i18n/ui";

// const { visits } = Astro.props;
const visits = 1420; // Static placeholder for now
const lang = (Astro.currentLocale || "es") as keyof typeof ui;
const t = useTranslations(lang);
---

<div class="visitor-count-container">
  <div class="visitor-count-wrapper">
    <!-- Corner Accents -->
    <div class="corner corner-tl"></div>
    <div class="corner corner-tr"></div>
    <div class="corner corner-bl"></div>
    <div class="corner corner-br"></div>

    <div class="visitor-count-icon">
      <div class="icon-pulse"></div>
      <div class="icon-scanline"></div>
      <svg
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
      >
        <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        <path
          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
        ></path>
      </svg>
    </div>
    <div class="visitor-count-content">
      <span class="visitor-count-label">
        <span class="text-prefix">&gt;</span>
        {t("visitorCount")}
      </span>
      <span class="visitor-count-number" id="visitor-count" data-visits={visits}
        >0</span
      >
    </div>

    <!-- Holographic Effect -->
    <div class="visitor-count-holo"></div>
    <div class="visitor-count-scanlines"></div>
  </div>
</div>

<style>
  :root {
    --visit-primary: #00ff41;
    --visit-secondary: #008f11;
    --visit-bg: rgba(5, 5, 5, 0.9);
  }

  .visitor-count-container {
    position: absolute;
    top: 120px;
    right: 2rem;
    z-index: 50;
    pointer-events: none;
    opacity: 0;
    animation: fadeIn 0.8s ease-in-out 0.5s forwards;
    font-family: var(--terminal-font, "Courier New", monospace);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .visitor-count-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1.25rem;
    background: var(--visit-bg);
    border: 1px solid var(--visit-primary);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    overflow: hidden;
    clip-path: polygon(
      10px 0,
      100% 0,
      100% calc(100% - 10px),
      calc(100% - 10px) 100%,
      0 100%,
      0 10px
    );
    box-shadow: 0 0 10px rgba(0, 255, 65, 0.1);
  }

  .visitor-count-wrapper:hover {
    background: rgba(0, 255, 65, 0.1);
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.2);
    transform: translateY(-2px);
  }

  /* Corners */
  .corner {
    position: absolute;
    width: 6px;
    height: 6px;
    border: 2px solid var(--visit-primary);
    transition: all 0.3s ease;
  }

  .corner-tl {
    top: 0;
    left: 0;
    border-right: none;
    border-bottom: none;
  }
  .corner-tr {
    top: 0;
    right: 0;
    border-left: none;
    border-bottom: none;
  }
  .corner-bl {
    bottom: 0;
    left: 0;
    border-right: none;
    border-top: none;
  }
  .corner-br {
    bottom: 0;
    right: 0;
    border-left: none;
    border-top: none;
  }

  .visitor-count-wrapper:hover .corner {
    width: 10px;
    height: 10px;
  }

  /* Icon */
  .visitor-count-icon {
    position: relative;
    width: 24px;
    height: 24px;
    color: var(--visit-primary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .visitor-count-icon svg {
    width: 100%;
    height: 100%;
    position: relative;
    z-index: 2;
    filter: drop-shadow(0 0 5px var(--visit-primary));
  }

  .icon-pulse {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle,
      rgba(0, 255, 65, 0.4) 0%,
      transparent 70%
    );
    border-radius: 50%;
    animation: pulse-glow 2s ease-in-out infinite;
  }

  .icon-scanline {
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--visit-primary);
    opacity: 0.5;
    animation: scan-vertical 2s linear infinite;
    z-index: 3;
  }

  @keyframes scan-vertical {
    0% {
      top: 0;
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      top: 100%;
      opacity: 0;
    }
  }

  @keyframes pulse-glow {
    0%,
    100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.6;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.5);
      opacity: 0.2;
    }
  }

  /* Content */
  .visitor-count-content {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    z-index: 2;
  }

  .visitor-count-label {
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--visit-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .text-prefix {
    color: #fff;
    margin-right: 0.2rem;
  }

  .visitor-count-number {
    font-size: 1.2rem;
    font-weight: 700;
    color: #fff;
    text-shadow: 0 0 5px var(--visit-primary);
    font-family: var(--terminal-font, monospace);
    letter-spacing: 0.05em;
  }

  /* Holographic Effects */
  .visitor-count-holo {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      45deg,
      transparent 40%,
      rgba(0, 255, 65, 0.05) 50%,
      transparent 60%
    );
    transform: translateX(-100%);
    transition: transform 0.6s ease;
    z-index: 1;
  }

  .visitor-count-wrapper:hover .visitor-count-holo {
    transform: translateX(100%);
  }

  .visitor-count-scanlines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 255, 65, 0.03) 2px,
      rgba(0, 255, 65, 0.03) 4px
    );
    pointer-events: none;
    z-index: 1;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .visitor-count-container {
      top: 80px;
      right: 1.5rem;
    }

    .visitor-count-wrapper {
      padding: 0.5rem 1rem;
    }
  }

  @media (max-width: 768px) {
    .visitor-count-container {
      top: 70px;
      right: 1rem;
    }

    .visitor-count-wrapper {
      padding: 0.5rem 0.8rem;
      gap: 0.75rem;
    }

    .visitor-count-icon {
      width: 20px;
      height: 20px;
    }

    .visitor-count-label {
      font-size: 0.6rem;
    }

    .visitor-count-number {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .visitor-count-container {
      top: 65px;
      right: 0.75rem;
    }
  }
</style>

<script>
  function updateVisitorCount() {
    const countElement = document.getElementById("visitor-count");
    if (!countElement) return;

    const targetCount = Number(countElement.dataset.visits) || 0;
    if (targetCount === 0) {
      countElement.textContent = "0";
      return;
    }

    const duration = 2000;
    const startTime = performance.now();
    let lastDisplayed = -1;

    function animate(currentTime: number) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);

      // Easing function for cyberpunk glitchy feeling
      const ease = (t: number) => (t === 1 ? 1 : 1 - Math.pow(2, -10 * t));

      const currentCount = Math.floor(ease(progress) * targetCount);

      if (currentCount !== lastDisplayed) {
        countElement!.textContent = currentCount.toString().padStart(4, "0");
        lastDisplayed = currentCount;
      }

      if (progress < 1) {
        requestAnimationFrame(animate);
      }
    }

    requestAnimationFrame(animate);
  }

  document.addEventListener("DOMContentLoaded", updateVisitorCount);
</script>
