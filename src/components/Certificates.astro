---
import Modal from "./Modal.astro";

const certificados = [
  {
    id: "cert-1",
    src: "/projects/hack.png",
    description: "Hacking Ético",
    platform: "Platzi",
    fecha: "2023",
    category: "cybersecurity",
    level: "advanced",
  },
  {
    id: "cert-2",
    src: "/projects/inteligencia.png",
    description: "Inteligencia para la ciberseguridad",
    platform: "Platzi",
    fecha: "2023",
    category: "cybersecurity",
    level: "intermediate",
  },
  {
    id: "cert-3",
    src: "/projects/reactnative.png",
    description: "Introducción a React Native",
    platform: "Platzi",
    fecha: "2023",
    category: "development",
    level: "beginner",
  },
  {
    id: "cert-4",
    src: "/projects/redes.png",
    description: "Redes de Computadoras",
    platform: "Platzi",
    fecha: "2023",
    category: "networking",
    level: "intermediate",
  },
  {
    id: "cert-5",
    src: "/projects/html.jpg",
    description: "Desarrollo Web con HTML",
    platform: "Udemy",
    fecha: "2022",
    category: "development",
    level: "beginner",
  },
];

const getCategoryColor = (category: string) => {
  switch (category) {
    case 'cybersecurity':
      return 'bg-red-500/10 text-red-400 border-red-400/30';
    case 'development':
      return 'bg-blue-500/10 text-blue-400 border-blue-400/30';
    case 'networking':
      return 'bg-green-500/10 text-green-400 border-green-400/30';
    default:
      return 'bg-gray-500/10 text-gray-400 border-gray-400/30';
  }
};

const getLevelIcon = (level: string) => {
  switch (level) {
    case 'beginner':
      return '●';
    case 'intermediate':
      return '●●';
    case 'advanced':
      return '●●●';
    default:
      return '●';
  }
};
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      certificados.map(({ id, src, description, platform, fecha, category, level }) => (
        <>
          <article
            class="group relative bg-gradient-to-b from-slate-900/90 to-slate-800/80 rounded-lg overflow-hidden border border-white/10 hover:border-green-400/40 transition-all duration-300 cursor-pointer hover:scale-105 hover:shadow-xl backdrop-blur-sm"
            onclick={`document.getElementById('${id}').showModal()`}
          >
            {/* Image */}
            <div class="relative aspect-[4/3] overflow-hidden">
              <img
                src={src}
                alt={`Certificado de ${description}`}
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900/90 via-transparent to-transparent" />
              
              {/* Verified badge */}
              <div class="absolute top-3 right-3 bg-green-500/20 text-green-400 px-2 py-1 rounded-full text-xs font-medium border border-green-400/30 backdrop-blur-sm">
                <span class="inline-block w-2 h-2 bg-green-400 rounded-full mr-1 animate-pulse"></span>
                VERIFIED
              </div>
            </div>

            {/* Content */}
            <div class="p-4 space-y-3">
              {/* Title */}
              <h3 class="text-lg font-semibold text-white group-hover:text-green-400 transition-colors duration-300">
                {description}
              </h3>

              {/* Badges */}
              <div class="flex items-center justify-between flex-wrap gap-2">
                <span class={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium border ${getCategoryColor(category)}`}>
                  {platform}
                </span>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-500/10 text-purple-400 border border-purple-400/30">
                  <span class="mr-1">{getLevelIcon(level)}</span>
                  {level.toUpperCase()}
                </span>
              </div>

              {/* Date */}
              <div class="text-sm text-gray-400">
                <span class="font-medium">Issued:</span> {fecha}
              </div>

              {/* Click to view */}
              <div class="flex items-center justify-center pt-2 text-sm text-gray-400 group-hover:text-green-400 transition-colors duration-300">
                <span>Click to view</span>
                <svg class="w-4 h-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </article>

          <Modal id={id}>
            <img
              src={src}
              alt={`Certificado de ${description}`}
              class="w-full h-auto rounded-lg"
            />
          </Modal>
        </>
      ))
    }
  </div>
</section>
