---
import LinkInline from "./LinkInline.astro";

interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<article class="cyber-experience-item">
  <!-- Cyber Timeline Connector -->
  <div class="cyber-timeline-connector">
    <div class="cyber-node">
      <div class="cyber-node-core"></div>
      <div class="cyber-node-ring"></div>
    </div>
  </div>

  <!-- Main Cyber Card -->
  <div class="cyber-card">
    <!-- Holographic Overlay -->
    <div class="holographic-overlay"></div>

    <!-- Scanlines Effect -->
    <div class="scanlines"></div>

    <!-- Card Header -->
    <header class="cyber-card-header">
      <div class="cyber-date-chip">
        <span class="cyber-date-text">&gt; {date}</span>
      </div>
      <div class="cyber-glitch-container">
        <h3 class="cyber-title">{title}</h3>
        <h4 class="cyber-company">// {company}</h4>
      </div>
    </header>

    <!-- Card Body -->
    <div class="cyber-card-body">
      <div class="cyber-description-container">
        <p class="cyber-description">{description}</p>
      </div>

      {
        link && (
          <div class="cyber-link-section">
            <LinkInline href={link} class="cyber-action-link">
              <span class="cyber-link-label">ACCESS_LINK</span>
              <div class="cyber-link-arrow">
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M7 17L17 7M17 7H7M17 7V17" />
                </svg>
              </div>
            </LinkInline>
          </div>
        )
      }
    </div>

    <!-- Cyber Frame Elements -->
    <div class="cyber-frame">
      <div class="cyber-corner cyber-corner-tl"></div>
      <div class="cyber-corner cyber-corner-tr"></div>
      <div class="cyber-corner cyber-corner-bl"></div>
      <div class="cyber-corner cyber-corner-br"></div>
    </div>
  </div>
</article>

<style>
  /* Variables CSS locales alineadas con el tema global */
  :root {
    --cyber-item-primary: #00ff41;
    --cyber-item-bg: rgba(5, 5, 5, 0.8);
    --cyber-item-border: rgba(0, 255, 65, 0.3);
    --cyber-item-text: #e0e0e0;
  }

  /* Contenedor principal del item */
  .cyber-experience-item {
    position: relative;
    display: flex;
    gap: 2rem;
    padding: 2rem 0;
  }

  /* Timeline Connector */
  .cyber-timeline-connector {
    position: relative;
    width: 2px; /* Alineado con la línea del timeline */
    display: flex;
    justify-content: center;
    flex-shrink: 0;
    margin-left: auto;
    margin-right: auto;
  }

  /* Ajuste para que el conector esté centrado en desktop */
  @media (min-width: 769px) {
    .cyber-timeline-connector {
      /* Esto alinea el nodo con la línea central absoluta de Experience.astro */
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      top: 2rem;
      height: 100%;
      width: 0;
      z-index: 10;
    }
  }

  .cyber-node {
    position: absolute;
    top: 0;
    width: 16px;
    height: 16px;
    z-index: 10;
  }

  .cyber-node-core {
    position: absolute;
    width: 10px;
    height: 10px;
    background: #00ff41;
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    box-shadow: 0 0 10px #00ff41;
  }

  .cyber-node-ring {
    position: absolute;
    width: 16px;
    height: 16px;
    border: 1px solid #00ff41;
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.6;
  }

  /* Card Principal */
  .cyber-card {
    position: relative;
    width: 45%; /* Ancho para columnas alternas */
    background: rgba(10, 10, 10, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(0, 255, 65, 0.2);
    padding: 1.5rem;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  /* Alternancia */
  .cyber-experience-item:nth-child(odd) .cyber-card {
    margin-right: auto;
  }

  .cyber-experience-item:nth-child(even) .cyber-card {
    margin-left: auto;
  }

  /* Overlay holográfico */
  .holographic-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(0, 255, 65, 0.05) 50%,
      transparent 70%
    );
    transform: translateX(-100%);
    transition: transform 0.8s ease;
    z-index: 1;
    pointer-events: none;
  }

  /* Efecto de scanlines */
  .scanlines {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 255, 65, 0.02) 2px,
      rgba(0, 255, 65, 0.02) 4px
    );
    pointer-events: none;
    z-index: 2;
  }

  /* Header de la card */
  .cyber-card-header {
    position: relative;
    margin-bottom: 1rem;
    z-index: 3;
  }

  .cyber-date-chip {
    display: inline-block;
    background: rgba(0, 255, 65, 0.1);
    color: #00ff41;
    padding: 0.25rem 0.75rem;
    font-size: 0.8rem;
    font-weight: 700;
    font-family: var(--terminal-font);
    border: 1px solid rgba(0, 255, 65, 0.3);
    margin-bottom: 0.5rem;
  }

  .cyber-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    margin: 0;
    text-transform: uppercase;
    font-family: var(--terminal-font);
    letter-spacing: 0.05em;
  }

  .cyber-company {
    font-size: 0.9rem;
    font-weight: 600;
    color: #00ff41;
    margin: 0.25rem 0 0 0;
    font-family: var(--terminal-font);
    opacity: 0.8;
  }

  /* Body de la card */
  .cyber-card-body {
    position: relative;
    z-index: 3;
  }

  .cyber-description {
    color: #a0a0a0;
    line-height: 1.6;
    font-size: 0.95rem;
    margin: 0;
    font-family: var(--terminal-font);
  }

  .cyber-link-section {
    margin-top: 1rem;
  }

  .cyber-action-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #00ff41;
    text-decoration: none;
    font-size: 0.85rem;
    font-family: var(--terminal-font);
    font-weight: 700;
    transition: all 0.3s;
  }

  .cyber-action-link:hover {
    text-shadow: 0 0 8px rgba(0, 255, 65, 0.6);
  }

  .cyber-link-arrow {
    width: 14px;
    height: 14px;
    transition: transform 0.3s ease;
  }

  .cyber-action-link:hover .cyber-link-arrow {
    transform: translate(2px, -2px);
  }

  /* Frame cyberpunk */
  .cyber-frame {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .cyber-corner {
    position: absolute;
    width: 10px;
    height: 10px;
    border: 2px solid rgba(0, 255, 65, 0.5);
    transition: all 0.3s ease;
  }

  .cyber-corner-tl {
    top: 0;
    left: 0;
    border-right: none;
    border-bottom: none;
  }
  .cyber-corner-tr {
    top: 0;
    right: 0;
    border-left: none;
    border-bottom: none;
  }
  .cyber-corner-bl {
    bottom: 0;
    left: 0;
    border-right: none;
    border-top: none;
  }
  .cyber-corner-br {
    bottom: 0;
    right: 0;
    border-left: none;
    border-top: none;
  }

  /* Efectos hover */
  .cyber-experience-item:hover .cyber-card {
    border-color: #00ff41;
    box-shadow: 0 0 15px rgba(0, 255, 65, 0.1);
  }

  .cyber-experience-item:hover .holographic-overlay {
    transform: translateX(100%);
  }

  .cyber-experience-item:hover .cyber-node-core {
    background: #fff;
    box-shadow: 0 0 15px #00ff41;
  }

  .cyber-experience-item:hover .cyber-corner {
    width: 15px;
    height: 15px;
    border-color: #00ff41;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .cyber-experience-item {
      padding: 1.5rem 0;
      gap: 1.5rem;
    }

    .cyber-card {
      width: calc(100% - 3rem); /* Full width minus space for line */
      margin-left: 3rem !important; /* Always push right in mobile */
    }

    .cyber-timeline-connector {
      position: absolute;
      left: 1.5rem; /* Align with timeline line in Experience.astro */
      top: 2rem;
      transform: translateX(-50%);
    }
  }
</style>
