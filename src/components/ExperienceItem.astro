---
import LinkInline from "./LinkInline.astro";

interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<div class="cyber-timeline-item group">
  <!-- Cyber Marker -->
  <div class="cyber-marker">
    <div class="cyber-dot">
      <div class="cyber-pulse"></div>
      <div class="cyber-core"></div>
    </div>
    <div class="cyber-line"></div>
  </div>
  
  <!-- Main Content Card -->
  <div class="cyber-card">
    <!-- Header with date badge -->
    <div class="cyber-header">
      <div class="cyber-date-badge">
        <span class="cyber-date-text">{date}</span>
        <div class="cyber-date-glow"></div>
      </div>
      <div class="cyber-title-section">
        <h3 class="cyber-title">{title}</h3>
        <h4 class="cyber-company">{company}</h4>
      </div>
    </div>
    
    <!-- Content Body -->
    <div class="cyber-body">
      <p class="cyber-description">{description}</p>
      
      {
        link && (
          <div class="cyber-link-container">
            <LinkInline href={link} class="cyber-link">
              <span class="cyber-link-text">Ver proyecto</span>
              <div class="cyber-link-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6" />
                  <path d="M11 13l9 -9" />
                  <path d="M15 4h5v5" />
                </svg>
              </div>
              <div class="cyber-link-glow"></div>
            </LinkInline>
          </div>
        )
      }
    </div>
    
    <!-- Decorative elements -->
    <div class="cyber-corner cyber-corner-tl"></div>
    <div class="cyber-corner cyber-corner-tr"></div>
    <div class="cyber-corner cyber-corner-bl"></div>
    <div class="cyber-corner cyber-corner-br"></div>
  </div>
</div>

<style>
  .cyber-timeline-item {
    position: relative;
    padding-left: 4rem;
    padding-bottom: 4rem;
    transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  .cyber-timeline-item:last-child {
    padding-bottom: 0;
  }
  
  /* Cyber Marker System */
  .cyber-marker {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 10;
  }
  
  .cyber-dot {
    position: relative;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  
  .cyber-pulse {
    position: absolute;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    background: linear-gradient(135deg, #00ff88 0%, #00cc6a 100%);
    animation: cyber-pulse 2s ease-in-out infinite;
    opacity: 0.6;
  }
  
  .cyber-core {
    position: relative;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: linear-gradient(135deg, #00ff88 0%, #ffffff 50%, #00cc6a 100%);
    box-shadow: 
      0 0 20px rgba(0, 255, 136, 0.5),
      inset 0 2px 4px rgba(255, 255, 255, 0.3);
    z-index: 3;
    transition: all 0.3s ease;
  }
  
  .cyber-line {
    position: absolute;
    top: 2rem;
    bottom: 0;
    left: 50%;
    width: 2px;
    background: linear-gradient(
      to bottom, 
      rgba(0, 255, 136, 0.8) 0%, 
      rgba(0, 255, 136, 0.4) 50%,
      rgba(0, 255, 136, 0.1) 100%
    );
    transform: translateX(-50%);
    z-index: 1;
  }
  
  .cyber-timeline-item:last-child .cyber-line {
    display: none;
  }
  
  /* Main Card */
  .cyber-card {
    position: relative;
    background: 
      linear-gradient(135deg, 
        rgba(255, 255, 255, 0.95) 0%, 
        rgba(248, 250, 252, 0.98) 100%
      );
    backdrop-filter: blur(20px);
    border: 1px solid rgba(0, 255, 136, 0.2);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    overflow: hidden;
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.08),
      0 2px 8px rgba(0, 255, 136, 0.1);
  }
  
  .cyber-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg, 
      rgba(0, 255, 136, 0.05) 0%, 
      transparent 30%,
      transparent 70%,
      rgba(0, 255, 136, 0.05) 100%
    );
    z-index: 1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  /* Header Section */
  .cyber-header {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
    position: relative;
    z-index: 2;
  }
  
  .cyber-date-badge {
    position: relative;
    display: inline-flex;
    align-items: center;
    background: linear-gradient(135deg, 
      rgba(0, 255, 136, 0.15) 0%, 
      rgba(0, 255, 136, 0.08) 100%
    );
    border: 1px solid rgba(0, 255, 136, 0.3);
    border-radius: 12px;
    padding: 0.75rem 1.5rem;
    align-self: flex-start;
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .cyber-date-text {
    font-weight: 600;
    font-size: 0.875rem;
    color: #059669;
    position: relative;
    z-index: 2;
  }
  
  .cyber-date-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(0, 255, 136, 0.2) 50%, 
      transparent 100%
    );
    transform: translateX(-100%);
    transition: transform 0.6s ease;
  }
  
  .cyber-title-section {
    position: relative;
  }
  
  .cyber-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    background: linear-gradient(135deg, #047857 0%, #059669 50%, #10b981 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .cyber-company {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    color: #374151;
    transition: all 0.3s ease;
    position: relative;
  }
  
  /* Body Content */
  .cyber-body {
    position: relative;
    z-index: 2;
  }
  
  .cyber-description {
    margin: 0 0 1.5rem 0;
    line-height: 1.7;
    color: #4b5563;
    font-size: 1rem;
    position: relative;
  }
  
  /* Link Styling */
  .cyber-link-container {
    position: relative;
  }
  
  .cyber-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, 
      rgba(0, 255, 136, 0.1) 0%, 
      rgba(0, 255, 136, 0.05) 100%
    );
    border: 1px solid rgba(0, 255, 136, 0.3);
    border-radius: 12px;
    color: #047857;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .cyber-link-text {
    position: relative;
    z-index: 2;
  }
  
  .cyber-link-icon {
    width: 1.25rem;
    height: 1.25rem;
    transition: transform 0.3s ease;
    position: relative;
    z-index: 2;
  }
  
  .cyber-link-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(0, 255, 136, 0.2) 0%, 
      rgba(0, 255, 136, 0.1) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  /* Decorative Corners */
  .cyber-corner {
    position: absolute;
    width: 12px;
    height: 12px;
    border: 2px solid rgba(0, 255, 136, 0.4);
    transition: all 0.3s ease;
  }
  
  .cyber-corner-tl { top: 8px; left: 8px; border-right: none; border-bottom: none; }
  .cyber-corner-tr { top: 8px; right: 8px; border-left: none; border-bottom: none; }
  .cyber-corner-bl { bottom: 8px; left: 8px; border-right: none; border-top: none; }
  .cyber-corner-br { bottom: 8px; right: 8px; border-left: none; border-top: none; }
  
  /* Hover Effects */
  .cyber-timeline-item:hover .cyber-core {
    transform: scale(1.3);
    box-shadow: 
      0 0 30px rgba(0, 255, 136, 0.8),
      inset 0 2px 4px rgba(255, 255, 255, 0.5);
  }
  
  .cyber-timeline-item:hover .cyber-card {
    transform: translateX(8px) translateY(-4px);
    border-color: rgba(0, 255, 136, 0.4);
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.12),
      0 8px 16px rgba(0, 255, 136, 0.2);
  }
  
  .cyber-timeline-item:hover .cyber-card::before {
    opacity: 1;
  }
  
  .cyber-timeline-item:hover .cyber-date-glow {
    transform: translateX(0);
  }
  
  .cyber-timeline-item:hover .cyber-title {
    transform: translateX(4px);
  }
  
  .cyber-timeline-item:hover .cyber-company {
    transform: translateX(2px);
    color: #1f2937;
  }
  
  .cyber-timeline-item:hover .cyber-corner {
    border-color: rgba(0, 255, 136, 0.8);
    width: 16px;
    height: 16px;
  }
  
  .cyber-link:hover {
    transform: translateY(-2px);
    border-color: rgba(0, 255, 136, 0.5);
    box-shadow: 0 8px 25px rgba(0, 255, 136, 0.2);
  }
  
  .cyber-link:hover .cyber-link-icon {
    transform: translateX(4px);
  }
  
  .cyber-link:hover .cyber-link-glow {
    opacity: 1;
  }
  
  /* Dark Mode */
  @media (prefers-color-scheme: dark) {
    .cyber-card {
      background: linear-gradient(135deg, 
        rgba(17, 24, 39, 0.95) 0%, 
        rgba(31, 41, 55, 0.98) 100%
      );
      box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.3),
        0 2px 8px rgba(0, 255, 136, 0.15);
    }
    
    .cyber-company {
      color: #e5e7eb;
    }
    
    .cyber-description {
      color: #d1d5db;
    }
    
    .cyber-date-text {
      color: #10b981;
    }
    
    .cyber-link {
      color: #10b981;
    }
    
    .cyber-timeline-item:hover .cyber-company {
      color: #f3f4f6;
    }
  }
  
  :global(.dark) .cyber-card {
    background: linear-gradient(135deg, 
      rgba(17, 24, 39, 0.95) 0%, 
      rgba(31, 41, 55, 0.98) 100%
    );
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      0 2px 8px rgba(0, 255, 136, 0.15);
  }
  
  :global(.dark) .cyber-company {
    color: #e5e7eb;
  }
  
  :global(.dark) .cyber-description {
    color: #d1d5db;
  }
  
  :global(.dark) .cyber-date-text {
    color: #10b981;
  }
  
  :global(.dark) .cyber-link {
    color: #10b981;
  }
  
  :global(.dark) .cyber-timeline-item:hover .cyber-company {
    color: #f3f4f6;
  }
  
  /* Animations */
  @keyframes cyber-pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.6;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.8;
    }
  }
  
  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(-40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  .cyber-timeline-item {
    animation: slideInRight 0.8s cubic-bezier(0.23, 1, 0.32, 1) forwards;
    opacity: 0;
  }
  
  .cyber-timeline-item:nth-child(1) { animation-delay: 0.1s; }
  .cyber-timeline-item:nth-child(2) { animation-delay: 0.3s; }
  .cyber-timeline-item:nth-child(3) { animation-delay: 0.5s; }
  .cyber-timeline-item:nth-child(4) { animation-delay: 0.7s; }
  .cyber-timeline-item:nth-child(5) { animation-delay: 0.9s; }
</style>
