---
const { href, class: className } = Astro.props
---

<a
  href={href}
  target="_blank"
  rel="noopener"
  class={`
    inline-flex items-center justify-center gap-2 
    px-4 py-2 
    text-sm font-medium
    transition-all duration-300 
    rounded-lg 
    text-gray-800 dark:text-gray-200
    hover:bg-white/10 dark:hover:bg-gray-800/30 
    hover:scale-105 
    active:scale-95
    ${className}
  `}
>
  <slot />
</a>
