---
import { useTranslations } from "../i18n/utils";
import { ui } from "../i18n/ui";

const lang = (Astro.currentLocale || "es") as keyof typeof ui;
const t = useTranslations(lang);
---

<section class="cyber-about-section">
  <div class="cyber-container">
    <!-- Profile Card -->
    <div class="cyber-profile-wrapper">
      <div class="cyber-profile-card">
        <!-- Holographic overlay -->
        <div class="cyber-holo-overlay"></div>

        <!-- Scanlines effect -->
        <div class="cyber-scanlines"></div>

        <!-- Profile content -->
        <div class="cyber-profile-content">
          <div class="cyber-avatar-container">
            <div class="cyber-avatar-ring"></div>
            <div class="cyber-avatar-glow"></div>
            <img src="/me.jpg" alt="MatÃ­as Acebal" class="cyber-avatar" />
            <div class="cyber-avatar-pulse"></div>
          </div>

          <div class="cyber-profile-info">
            <h3 class="cyber-profile-title">
              <span class="cyber-title-main">&gt; {t("about.card.title")}</span>
              <span class="cyber-title-sub">[{t("about.card.subtitle")}]</span>
            </h3>

            <p class="cyber-profile-description">
              {t("about.card.desc")}
            </p>

            <div class="cyber-tags">
              <span class="cyber-tag cyber-tag-primary">FULLSTACK</span>
              <span class="cyber-tag cyber-tag-secondary">CYBERSECURITY</span>
              <span class="cyber-tag cyber-tag-accent">SYSTEMS</span>
            </div>
          </div>
        </div>

        <!-- Cyber frame -->
        <div class="cyber-frame">
          <div class="cyber-corner cyber-corner-tl"></div>
          <div class="cyber-corner cyber-corner-tr"></div>
          <div class="cyber-corner cyber-corner-bl"></div>
          <div class="cyber-corner cyber-corner-br"></div>
        </div>

        <!-- Data streams -->
        <div class="cyber-data-streams">
          <div class="cyber-stream cyber-stream-1"></div>
          <div class="cyber-stream cyber-stream-2"></div>
        </div>
      </div>
    </div>

    <!-- Content Cards -->
    <div class="cyber-content-grid">
      <!-- Historia Card -->
      <div class="cyber-info-card">
        <div class="cyber-card-header">
          <div class="cyber-icon">ðŸ“–</div>
          <h3 class="cyber-card-title">{t("about.history.title")}</h3>
          <div class="cyber-header-line"></div>
        </div>

        <div class="cyber-card-content">
          <p class="cyber-text">
            {t("about.history.text")}
            <span class="cyber-highlight">{t("about.history.highlight")}</span>{
              t("about.history.text2")
            }
          </p>
        </div>

        <div class="cyber-card-glow cyber-glow-primary"></div>
        <div class="cyber-card-scanlines"></div>
      </div>

      <!-- Enfoque Card -->
      <div class="cyber-info-card">
        <div class="cyber-card-header">
          <div class="cyber-icon">ðŸŽ¯</div>
          <h3 class="cyber-card-title">{t("about.focus.title")}</h3>
          <div class="cyber-header-line"></div>
        </div>

        <div class="cyber-card-content">
          <p class="cyber-text">
            {t("about.focus.text")}
            <span class="cyber-highlight">{t("about.focus.highlight")}</span>
            {t("about.focus.text2")}
          </p>
        </div>

        <div class="cyber-card-glow cyber-glow-secondary"></div>
        <div class="cyber-card-scanlines"></div>
      </div>

      <!-- Actualmente Card -->
      <div class="cyber-info-card">
        <div class="cyber-card-header">
          <div class="cyber-icon">ðŸš€</div>
          <h3 class="cyber-card-title">{t("about.current.title")}</h3>
          <div class="cyber-header-line"></div>
        </div>

        <div class="cyber-card-content">
          <p class="cyber-text">
            {t("about.current.text")}
            <span class="cyber-highlight">{t("about.current.highlight")}</span>
            {t("about.current.text2")}
          </p>
        </div>

        <div class="cyber-card-glow cyber-glow-accent"></div>
        <div class="cyber-card-scanlines"></div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Variables CSS para el tema cyberpunk */
  :root {
    --about-primary: #00ff41;
    --about-secondary: #008f11;
    --about-accent: #050505;
    --about-bg: #050505;
    --about-card-bg: rgba(10, 10, 10, 0.9);
    --about-border: rgba(0, 255, 65, 0.3);
  }

  /* Contenedor principal */
  .cyber-about-section {
    position: relative;
    padding: 4rem 0;
  }

  .cyber-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    align-items: start;
  }

  /* Profile Card */
  .cyber-profile-wrapper {
    position: sticky;
    top: 2rem;
  }

  .cyber-profile-card {
    position: relative;
    background: linear-gradient(
      135deg,
      var(--about-card-bg) 0%,
      rgba(17, 17, 17, 0.95) 100%
    );
    backdrop-filter: blur(20px);
    border: 1px solid var(--about-border);
    padding: 2rem;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    clip-path: polygon(
      0 0,
      calc(100% - 30px) 0,
      100% 30px,
      100% 100%,
      30px 100%,
      0 calc(100% - 30px)
    );
  }

  .cyber-profile-card:hover {
    transform: translateY(-5px);
    border-color: var(--about-primary);
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.2);
  }

  /* Holographic overlay */
  .cyber-holo-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(0, 255, 65, 0.05) 50%,
      transparent 70%
    );
    transform: translateX(-100%);
    transition: transform 0.8s ease;
    z-index: 1;
  }

  .cyber-profile-card:hover .cyber-holo-overlay {
    transform: translateX(100%);
  }

  /* Scanlines effect */
  .cyber-scanlines {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 255, 65, 0.02) 2px,
      rgba(0, 255, 65, 0.02) 4px
    );
    pointer-events: none;
    z-index: 2;
  }

  .cyber-profile-content {
    position: relative;
    z-index: 3;
    text-align: center;
  }

  /* Avatar */
  .cyber-avatar-container {
    position: relative;
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  .cyber-avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--about-primary);
    position: relative;
    z-index: 3;
    transition: all 0.3s ease;
  }

  .cyber-avatar-ring {
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    border: 2px solid var(--about-secondary);
    border-radius: 50%;
    opacity: 0.6;
    animation: cyber-rotate 10s linear infinite;
  }

  .cyber-avatar-glow {
    position: absolute;
    top: -15px;
    left: -15px;
    right: -15px;
    bottom: -15px;
    background: radial-gradient(
      circle,
      var(--about-primary) 0%,
      transparent 70%
    );
    border-radius: 50%;
    opacity: 0.3;
    animation: cyber-pulse 2s ease-in-out infinite;
  }

  .cyber-avatar-pulse {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    border: 1px solid var(--about-primary);
    border-radius: 50%;
    opacity: 0;
    animation: cyber-avatar-pulse 3s ease-out infinite;
  }

  /* Profile info */
  .cyber-profile-info {
    text-align: center;
  }

  .cyber-profile-title {
    margin-bottom: 1rem;
    font-family: var(--terminal-font);
  }

  .cyber-title-main {
    display: block;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--about-primary);
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 0 0 10px var(--about-primary);
    margin-bottom: 0.5rem;
  }

  .cyber-title-sub {
    display: block;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--about-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
    text-shadow: 0 0 8px var(--about-secondary);
  }

  .cyber-profile-description {
    color: #e0e0e0;
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-family: var(--terminal-font);
  }

  /* Tags */
  .cyber-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }

  .cyber-tag {
    padding: 0.4rem 0.8rem;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: var(--terminal-font);
    transition: all 0.3s ease;
    clip-path: polygon(0 0, calc(100% - 6px) 0, 100% 100%, 6px 100%);
  }

  .cyber-tag-primary {
    background: rgba(0, 255, 65, 0.1);
    color: #00ff41;
    border: 1px solid #00ff41;
  }

  .cyber-tag-secondary {
    background: rgba(0, 143, 17, 0.1);
    color: #008f11;
    border: 1px solid #008f11;
  }

  .cyber-tag-accent {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border: 1px solid #fff;
  }

  .cyber-tag:hover {
    transform: scale(1.05);
    box-shadow: 0 0 10px currentColor;
  }

  /* Frame */
  .cyber-frame {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .cyber-corner {
    position: absolute;
    width: 25px;
    height: 25px;
    border: 2px solid var(--about-primary);
    transition: all 0.3s ease;
  }

  .cyber-corner-tl {
    top: 10px;
    left: 10px;
    border-right: none;
    border-bottom: none;
  }
  .cyber-corner-tr {
    top: 10px;
    right: 10px;
    border-left: none;
    border-bottom: none;
  }
  .cyber-corner-bl {
    bottom: 10px;
    left: 10px;
    border-right: none;
    border-top: none;
  }
  .cyber-corner-br {
    bottom: 10px;
    right: 10px;
    border-left: none;
    border-top: none;
  }

  .cyber-profile-card:hover .cyber-corner {
    border-color: var(--about-primary);
    box-shadow: 0 0 10px var(--about-primary);
  }

  /* Data streams */
  .cyber-data-streams {
    position: absolute;
    top: 0;
    right: 0;
    width: 6px;
    height: 100%;
    overflow: hidden;
  }

  .cyber-stream {
    position: absolute;
    width: 2px;
    height: 10px;
    background: var(--about-primary);
    animation: cyber-stream-flow 3s linear infinite;
  }

  .cyber-stream-1 {
    left: 0;
    animation-delay: 0s;
  }
  .cyber-stream-2 {
    left: 3px;
    animation-delay: 1.5s;
  }

  /* Content Grid */
  .cyber-content-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Info Cards */
  .cyber-info-card {
    position: relative;
    background: linear-gradient(
      135deg,
      var(--about-card-bg) 0%,
      rgba(17, 17, 17, 0.95) 100%
    );
    backdrop-filter: blur(20px);
    border: 1px solid var(--about-border);
    padding: 2rem;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    overflow: hidden;
    clip-path: polygon(
      0 0,
      calc(100% - 15px) 0,
      100% 15px,
      100% 100%,
      15px 100%,
      0 calc(100% - 15px)
    );
  }

  .cyber-info-card:hover {
    transform: translateX(5px);
    border-color: var(--about-primary);
    box-shadow: 0 0 20px rgba(0, 255, 65, 0.1);
  }

  /* Card header */
  .cyber-card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .cyber-icon {
    font-size: 1.5rem;
    /* filter: hue-rotate(180deg) saturate(0.8); */
  }

  .cyber-card-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--about-primary);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-family: var(--terminal-font);
    text-shadow: 0 0 10px var(--about-primary);
    margin: 0;
  }

  .cyber-header-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, var(--about-primary), transparent);
    margin-left: 1rem;
  }

  /* Card content */
  .cyber-card-content {
    position: relative;
    z-index: 3;
  }

  .cyber-text {
    color: #e0e0e0;
    line-height: 1.8;
    font-size: 0.95rem;
    margin: 0;
    font-family: var(--terminal-font);
  }

  .cyber-highlight {
    color: var(--about-primary);
    font-weight: 700;
    text-shadow: 0 0 5px var(--about-primary);
  }

  /* Card effects */
  .cyber-card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }

  .cyber-glow-primary {
    background: linear-gradient(
      45deg,
      rgba(0, 255, 65, 0.1) 0%,
      transparent 70%
    );
  }

  .cyber-glow-secondary {
    background: linear-gradient(
      45deg,
      rgba(245, 158, 11, 0.1) 0%,
      transparent 70%
    );
  }

  .cyber-glow-accent {
    background: linear-gradient(
      45deg,
      rgba(0, 143, 17, 0.1) 0%,
      transparent 70%
    );
  }

  .cyber-info-card:hover .cyber-card-glow {
    opacity: 1;
  }

  .cyber-card-scanlines {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 255, 65, 0.02) 2px,
      rgba(0, 255, 65, 0.02) 4px
    );
    pointer-events: none;
    z-index: 2;
  }

  /* Animaciones */
  @keyframes cyber-rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes cyber-pulse {
    0%,
    100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.05);
    }
  }

  @keyframes cyber-avatar-pulse {
    0% {
      transform: scale(1);
      opacity: 0.8;
    }
    100% {
      transform: scale(1.5);
      opacity: 0;
    }
  }

  @keyframes cyber-stream-flow {
    0% {
      transform: translateY(-100%);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(100vh);
      opacity: 0;
    }
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .cyber-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .cyber-profile-wrapper {
      position: static;
      order: 1;
    }

    .cyber-content-grid {
      order: 2;
    }
  }

  @media (max-width: 768px) {
    .cyber-about-section {
      padding: 3rem 0;
    }

    .cyber-container {
      padding: 0 1rem;
      gap: 1.5rem;
    }

    .cyber-profile-card {
      padding: 1.5rem;
    }

    .cyber-avatar {
      width: 100px;
      height: 100px;
    }

    .cyber-title-main {
      font-size: 1rem;
    }

    .cyber-title-sub {
      font-size: 0.8rem;
    }

    .cyber-info-card {
      padding: 1.5rem;
    }

    .cyber-card-title {
      font-size: 1rem;
    }

    .cyber-text {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .cyber-container {
      padding: 0 0.5rem;
    }

    .cyber-profile-card {
      padding: 1rem;
    }

    .cyber-avatar {
      width: 80px;
      height: 80px;
    }
  }
</style>
