---
import Layout from "./Layout.astro";
import LinkedinIcon from "../components/icons/LinkedinIcon.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import Certificates from "../components/Certificates.astro";
import Education from "../components/Education.astro";
import CyberHero from "../components/CyberHero.astro";
import { useTranslations } from "../i18n/utils";
import { ui } from "../i18n/ui";

// interface Props {
//   visits: number;
// }

// const { visits } = Astro.props;
const lang = (Astro.currentLocale || "es") as keyof typeof ui;
const t = useTranslations(lang);
---

<Layout title={t("site.title")} description={t("site.description")}>
  <main class="cyber-portfolio">
    <!-- Hero Section with Cyberpunk Design -->
    <CyberHero />

    <!-- Experience Section with Updated Design -->
    <SectionContainer id="experience" class="experience-section mt-10">
      <div class="section-header">
        <h2 class="cyber-section-title">
          <span class="text-prefix">&gt;</span>
          <span class="glitch-text" data-text={t("experience.title")}>
            {t("experience.title")}
          </span>
        </h2>
        <p class="cyber-section-subtitle">
          [{t("experience.subtitle")}]
        </p>
      </div>
      <Experience />
    </SectionContainer>

    <!-- Education Section -->
    <Education />

    <!-- Projects Section -->
    <SectionContainer id="proyectos" class="projects-section">
      <div class="section-header">
        <h2 class="cyber-section-title">
          <span class="text-prefix">&gt;</span>
          <span class="glitch-text" data-text={t("projects.title")}>
            {t("projects.title")}
          </span>
        </h2>
        <p class="cyber-section-subtitle">
          [{t("projects.subtitle")}]
        </p>
      </div>
      <Projects />
    </SectionContainer>

    <!-- Certificates Section -->
    <SectionContainer id="certificaciones" class="certificates-section">
      <div class="section-header">
        <h2 class="cyber-section-title">
          <span class="text-prefix">&gt;</span>
          <span class="glitch-text" data-text={t("certificates.title")}>
            {t("certificates.title")}
          </span>
        </h2>
        <p class="cyber-section-subtitle">
          [{t("certificates.subtitle")}]
        </p>
      </div>
      <Certificates />
    </SectionContainer>

    <!-- About Me Section -->
    <SectionContainer id="sobre-mi" class="about-section">
      <div class="section-header">
        <h2 class="cyber-section-title">
          <span class="text-prefix">&gt;</span>
          <span class="glitch-text" data-text={t("about.title")}>
            {t("about.title")}
          </span>
        </h2>
        <p class="cyber-section-subtitle">
          [{t("about.subtitle")}]
        </p>
      </div>
      <AboutMe />
    </SectionContainer>

    <!-- Contact CTA Section -->
    <SectionContainer class="contact-cta-section">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
          class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center"
        >
          <div class="text-center lg:text-left order-2 lg:order-1">
            <h2
              class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4"
            >
              <span class="text-[#00ff41]">&gt; </span>
              <span class="glitch-text" data-text={t("contact.title")}>
                {t("contact.title")}
              </span>
            </h2>
            <p
              class="text-gray-400 text-lg sm:text-xl mb-6 max-w-lg mx-auto lg:mx-0 font-mono"
            >
              // {t("contact.subtitle")}
            </p>
            <div
              class="flex flex-col sm:flex-row gap-3 justify-center lg:justify-start"
            >
              <a
                href="mailto:acebalmatias2019@gmail.com"
                class="cyber-button cursor-pointer"
              >
                <MailIcon class="w-4 h-4 mr-2" />
                <span>{t("contact.cta")}</span>
              </a>
              <a
                href="https://www.linkedin.com/in/matiasacebal/"
                target="_blank"
                rel="noopener"
                class="cyber-button secondary"
              >
                <LinkedinIcon class="w-4 h-4 mr-2" />
                <span>LinkedIn</span>
              </a>
              <a
                href="https://github.com/dest92"
                target="_blank"
                rel="noopener"
                class="cyber-button secondary"
              >
                <GitHubIcon class="w-4 h-4 mr-2" />
                <span>GitHub</span>
              </a>
            </div>
          </div>
          <div class="flex justify-center order-1 lg:order-2">
            <div class="relative w-40 h-40">
              <div
                class="absolute inset-0 rounded-full border-2 border-green-500/30 animate-spin-slow"
              >
              </div>
              <div
                class="absolute inset-4 rounded-full border-2 border-green-500/50 animate-spin-reverse"
              >
              </div>
              <div
                class="absolute inset-8 rounded-full border border-green-400 animate-pulse"
              >
              </div>
              <div
                class="absolute inset-[3rem] bg-green-500/10 rounded-full flex items-center justify-center"
              >
                <span class="text-green-400 text-2xl font-mono animate-blink"
                  >@</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </SectionContainer>
  </main>
</Layout>

<style>
  html,
  body {
    overflow-x: hidden;
    max-width: 100%;
  }

  .cyber-portfolio {
    position: relative;
    padding-top: 0;
    overflow-x: hidden;
    width: 100%;
  }

  /* Section Headers */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 1rem;
  }

  .cyber-section-title {
    display: inline-block;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 900;
    margin: 0 0 1rem 0;
    position: relative;
    color: #fff;
    font-family: var(--terminal-font);
    letter-spacing: -0.05em;
    text-transform: uppercase;
  }

  .text-prefix {
    color: var(--cyber-primary);
    margin-right: 0.5rem;
  }

  .cyber-section-subtitle {
    font-size: 1rem;
    color: var(--cyber-primary);
    font-family: var(--terminal-font);
    letter-spacing: 0.1em;
    text-align: center;
    opacity: 0.8;
    margin-top: 0.5rem;
  }

  /* Glitch Text Effect Reused */
  .glitch-text {
    position: relative;
    display: inline-block;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .glitch-text::before {
    left: 2px;
    text-shadow: -1px 0 #ff00c1;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim-1 5s infinite linear alternate-reverse;
  }

  .glitch-text::after {
    left: -2px;
    text-shadow: -1px 0 #00fff9;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim-2 5s infinite linear alternate-reverse;
  }

  @keyframes glitch-anim-1 {
    0% {
      clip: rect(30px, 9999px, 10px, 0);
    }
    100% {
      clip: rect(70px, 9999px, 90px, 0);
    }
  }

  @keyframes glitch-anim-2 {
    0% {
      clip: rect(10px, 9999px, 80px, 0);
    }
    100% {
      clip: rect(90px, 9999px, 10px, 0);
    }
  }

  /* Section Spacing */
  .experience-section,
  .projects-section,
  .certificates-section,
  .about-section {
    padding: 6rem 0;
    position: relative;
  }

  .contact-cta-section {
    padding: 6rem 0;
    background: linear-gradient(to top, rgba(0, 255, 65, 0.05), transparent);
    border-top: 1px dashed rgba(0, 255, 65, 0.2);
  }

  /* Common Button Styles */
  .cyber-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    background: var(--cyber-primary);
    color: #000;
    font-weight: 700;
    text-transform: uppercase;
    font-family: var(--terminal-font);
    border: none;
    clip-path: polygon(
      10px 0,
      100% 0,
      100% calc(100% - 10px),
      calc(100% - 10px) 100%,
      0 100%,
      0 10px
    );
    transition: all 0.3s ease;
  }

  .cyber-button:hover {
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 rgba(0, 255, 65, 0.3);
  }

  .cyber-button.secondary {
    background: transparent;
    border: 1px solid var(--cyber-primary);
    color: var(--cyber-primary);
    clip-path: none;
  }

  .cyber-button.secondary:hover {
    background: rgba(0, 255, 65, 0.1);
    box-shadow: 0 0 15px rgba(0, 255, 65, 0.2);
    transform: translateY(-2px);
  }

  /* Animations */
  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin-slow {
    animation: spin-slow 10s linear infinite;
  }

  .animate-spin-reverse {
    animation: spin-slow 15s linear infinite reverse;
  }

  .animate-blink {
    animation: blink 1s step-end infinite;
  }

  @keyframes blink {
    50% {
      opacity: 0;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-header {
      margin-bottom: 3rem;
    }

    .cyber-section-title {
      font-size: 2rem;
    }
  }
</style>

<script>
  window.addEventListener("beforeunload", () => {
    window.scrollTo(0, 0);
  });

  document.addEventListener("DOMContentLoaded", () => {
    window.scrollTo(0, 0);
    if (window.location.hash) window.location.hash = "";
    setTimeout(() => window.scrollTo(0, 0), 100);
  });
</script>
