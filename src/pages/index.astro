---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedinIcon from "../components/icons/LinkedinIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefIcon from "../components/icons/BriefIcon.astro";
import PromptIcon from "../components/icons/PromptIcon.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import ProfileCheckIcon from "../components/icons/ProfileCheckIcon.astro";
import CVIcon from "../components/icons/CVIcon.astro";
import Certificates from "../components/Certificates.astro";
import HonourIcon from "../components/icons/HonourIcon.astro";
---

<Layout
  title="Matías Acebal - Desarrollador FullStack y Analista en Sistemas"
  description="Desarrollador FullStack, Analista en Sistemas y estudiante de Ingeniería. Especializado en desarrollo web y ciberseguridad."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <div class="flex flex-col items-center justify-center">
        <img
          src="https://avatars.githubusercontent.com/u/70166802?v=4"
          alt="Foto de perfil de Matías Acebal"
          class="rounded-full size-16 hover:scale-105 transition-all duration-300 shadow-lg mb-6"
          loading="eager"
        />

        <h1 class="flex flex-col sm:flex-row items-center justify-center gap-4 text-3xl md:text-4xl lg:text-5xl font-bold text-black dark:text-white text-balance text-center">
          ¡Hola! Soy Matías Acebal
      
        </h1>

        <h2 class="mt-6 text-xl lg:text-2xl text-black/80 dark:text-white/80 text-balance max-w-[700px] text-center leading-relaxed">
          Soy un 
          <span class="text-yellow-600 dark:text-yellow-400 font-semibold">
            desarrollador FullStack
          </span>,
          <span class="text-emerald-600 dark:text-emerald-400 font-semibold">
            Analista en Sistemas
          </span>, estudiante de 
          <span class="text-red-600 dark:text-red-400 font-semibold">
            Ingeniería en Sistemas
          </span> 
          y apasionado por la 
          <span class="text-purple-600 dark:text-purple-400 font-semibold">
            ciberseguridad
          </span>.
        </h2>

        <nav class="flex flex-wrap items-center justify-center gap-4 mt-8">
          <SocialPill 
            href="https://www.linkedin.com/in/matiasacebal/"
            class="bg-white/5 dark:bg-white/10 hover:bg-white/10 dark:hover:bg-white/15"
          >
            <LinkedinIcon class="size-4 md:size-6" />
            LinkedIn
          </SocialPill>
          <SocialPill 
            href="https://github.com/dest92"
            class="bg-white/5 dark:bg-white/10 hover:bg-white/10 dark:hover:bg-white/15"
          >
            <GitHubIcon class="size-4 md:size-6" />
            GitHub
          </SocialPill>
          <SocialPill 
            href="mailto:acebalmatias2019@gmail.com"
            class="bg-white/5 dark:bg-white/10 hover:bg-white/10 dark:hover:bg-white/15"
          >
            <MailIcon class="size-4 md:size-6" />
            Email
          </SocialPill>
          <SocialPill 
            href="https://drive.google.com/file/d/1HZZDJKWN8ENUauBF27h0n1gdZkJClyON/view?usp=sharing"
            class="bg-white/5 dark:bg-white/10 hover:bg-white/10 dark:hover:bg-white/15"
          >
            <CVIcon class="size-4 md:size-6" />
            CV
          </SocialPill>
        </nav>
      </div>
    </SectionContainer>
    <SectionContainer id="experience" class="mb-6 text-2xl font-semibold">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <BriefIcon class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="proyectos" class="mb-6 text-2xl font-semibold pt-10">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <PromptIcon class="size-8" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer
      id="certificaciones"
      class="mb-6 text-2xl font-semibold pt-10"
    >
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <HonourIcon class="size-8" />
        Certificaciones y cursos
      </h2>
      <Certificates />
    </SectionContainer>
    <SectionContainer id="sobre-mi" class="pt-10">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <ProfileCheckIcon class="size-7" />
        Sobre mi
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
