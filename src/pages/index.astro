<style>
  .cyber-portfolio {
    position: relative;
    padding-top: 80px; /* Compensar header fixed */
  }

  /* Section Headers */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 1rem;
  }

  .cyber-section-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 800;
    margin: 0 0 1rem 0;
    position: relative;
    color: transparent;
    background: linear-gradient(135deg, #047857 0%, #059669 50%, #10b981 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .title-icon {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    filter: hue-rotate(120deg);
  }

  .title-icon-svg {
    width: clamp(1.25rem, 3vw, 1.75rem);
    height: clamp(1.25rem, 3vw, 1.75rem);
    color: #059669;
  }

  .title-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #059669 0%, #10b981 100%);
    filter: blur(20px);
    opacity: 0.1;
    z-index: -1;
  }

  .cyber-section-subtitle {
    font-size: clamp(0.9rem, 2.5vw, 1.125rem);
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    padding: 0 0.5rem;
  }

  .cyber-section-subtitle code {
    background: rgba(0, 255, 136, 0.1);
    color: #059669;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-weight: 600;
  }

  /* Section Spacing */
  .terminal-section,
  .skills-section,
  .experience-section,
  .projects-section,
  .certificates-section,
  .about-section {
    padding: 4rem 0;
    position: relative;
  }

  /* Contact CTA Section */
  .contact-cta-section {
    padding: 5rem 0;
    background: linear-gradient(
      135deg,
      rgba(0, 255, 136, 0.05) 0%,
      transparent 50%,
      rgba(0, 255, 136, 0.05) 100%
    );
    position: relative;
    overflow: hidden;
  }

  .cyber-cta-container {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 3rem;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    padding: 0 1rem;
  }

  .cta-content {
    text-align: left;
  }

  .cta-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    margin: 0 0 1.5rem 0;
    background: linear-gradient(135deg, #047857 0%, #059669 50%, #10b981 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .cta-description {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: #4b5563;
    line-height: 1.6;
    margin: 0 0 2rem 0;
    max-width: 500px;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .cyber-cta-button {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.75rem 1.25rem;
    border: 2px solid;
    border-radius: 10px;
    font-weight: 600;
    font-size: clamp(0.8rem, 2vw, 0.9rem);
    text-decoration: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
    white-space: nowrap;
  }

  .cyber-cta-button .button-icon {
    width: 0.875rem;
    height: 0.875rem;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .cyber-cta-button .button-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cyber-cta-button.primary {
    background: rgba(0, 255, 136, 0.1);
    border-color: rgba(0, 255, 136, 0.4);
    color: #059669;
  }

  .cyber-cta-button.primary .button-glow {
    background: linear-gradient(135deg, rgba(0, 255, 136, 0.2), rgba(0, 255, 136, 0.1));
  }

  .cyber-cta-button.secondary {
    background: rgba(59, 130, 246, 0.1);
    border-color: rgba(59, 130, 246, 0.4);
    color: #2563eb;
  }

  .cyber-cta-button.secondary .button-glow {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(59, 130, 246, 0.1));
  }

  .cyber-cta-button.tertiary {
    background: rgba(107, 114, 128, 0.1);
    border-color: rgba(107, 114, 128, 0.4);
    color: #374151;
  }

  .cyber-cta-button.tertiary .button-glow {
    background: linear-gradient(135deg, rgba(107, 114, 128, 0.2), rgba(107, 114, 128, 0.1));
  }

  .cyber-cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .cyber-cta-button:hover .button-glow {
    opacity: 1;
  }

  .cyber-cta-button:hover .button-icon {
    transform: translateX(4px);
  }

  /* Cyber Globe Visual */
  .cta-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .cyber-globe {
    position: relative;
    width: 200px;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .globe-ring {
    position: absolute;
    border: 2px solid rgba(0, 255, 136, 0.3);
    border-radius: 50%;
  }
  
  .ring-1 {
    width: 200px;
    height: 200px;
    border-color: rgba(0, 255, 136, 0.4);
  }
  
  .ring-2 {
    width: 150px;
    height: 150px;
    border-color: rgba(59, 130, 246, 0.4);
  }
  
  .ring-3 {
    width: 100px;
    height: 100px;
    border-color: rgba(168, 85, 247, 0.4);
  }
  
  .globe-core {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #00ff88 0%, #059669 100%);
    border-radius: 50%;
    box-shadow: 
      0 0 30px rgba(0, 255, 136, 0.5),
      inset 0 2px 4px rgba(255, 255, 255, 0.3);
  }

  /* Dark Mode */
  @media (prefers-color-scheme: dark) {
    .cyber-section-subtitle {
      color: #9ca3af;
    }

    .cta-description {
      color: #d1d5db;
    }

    .cyber-cta-button.tertiary {
      color: #e5e7eb;
    }
  }

  :global(.dark) .cyber-section-subtitle {
    color: #9ca3af;
  }

  :global(.dark) .cta-description {
    color: #d1d5db;
  }

  :global(.dark) .cyber-cta-button.tertiary {
    color: #e5e7eb;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .cyber-cta-container {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 2.5rem;
    }

    .cta-content {
      text-align: center;
    }

    .terminal-section,
    .skills-section,
    .experience-section,
    .projects-section,
    .certificates-section,
    .about-section {
      padding: 3rem 0;
    }

    .contact-cta-section {
      padding: 4rem 0;
    }
  }

  @media (max-width: 768px) {
    .cyber-portfolio {
      padding-top: 70px;
    }

    .section-header {
      margin-bottom: 2rem;
      padding: 0 0.5rem;
    }

    .cyber-section-title {
      flex-direction: column;
      gap: 0.5rem;
    }

    .terminal-section,
    .skills-section,
    .experience-section,
    .projects-section,
    .certificates-section,
    .about-section {
      padding: 2.5rem 0;
    }

    .contact-cta-section {
      padding: 3rem 0;
    }

    .cyber-cta-container {
      gap: 2rem;
      padding: 0 0.5rem;
    }

    .cta-buttons {
      justify-content: center;
      flex-direction: column;
      align-items: center;
      gap: 0.75rem;
    }

    .cyber-cta-button {
      width: 100%;
      max-width: 280px;
      justify-content: center;
      padding: 0.75rem 1rem;
    }

    .cyber-globe {
      width: 140px;
      height: 140px;
    }

    .ring-1 {
      width: 140px;
      height: 140px;
    }

    .ring-2 {
      width: 100px;
      height: 100px;
    }

    .ring-3 {
      width: 60px;
      height: 60px;
    }

    .globe-core {
      width: 35px;
      height: 35px;
    }
  }

  @media (max-width: 480px) {
    .cyber-portfolio {
      padding-top: 60px;
    }

    .section-header {
      margin-bottom: 1.5rem;
      padding: 0 0.25rem;
    }

    .terminal-section,
    .skills-section,
    .experience-section,
    .projects-section,
    .certificates-section,
    .about-section {
      padding: 2rem 0;
    }

    .contact-cta-section {
      padding: 2.5rem 0;
    }

    .cyber-cta-container {
      padding: 0 0.25rem;
    }

    .cyber-cta-button {
      padding: 0.625rem 0.875rem;
      font-size: 0.8rem;
    }

    .cyber-cta-button .button-icon {
      width: 0.75rem;
      height: 0.75rem;
    }

    .cyber-globe {
      width: 120px;
      height: 120px;
    }

    .ring-1 {
      width: 120px;
      height: 120px;
    }

    .ring-2 {
      width: 85px;
      height: 85px;
    }

    .ring-3 {
      width: 50px;
      height: 50px;
    }

    .globe-core {
      width: 30px;
      height: 30px;
    }
  }
</style>

<script>
  // Ensure page starts at top
  window.addEventListener('beforeunload', () => {
    window.scrollTo(0, 0);
  });

  document.addEventListener('DOMContentLoaded', () => {
    // Scroll to top on page load
    window.scrollTo(0, 0);
    
    // Prevent any auto-scroll from hash or previous position
    if (window.location.hash) {
      window.location.hash = '';
    }
    
    // Force scroll to top after a brief delay to override any other scroll behavior
    setTimeout(() => {
      window.scrollTo(0, 0);
    }, 100);
  });
</script>
