<style>
  .cyber-portfolio {
    position: relative;
    padding-top: 80px;
  }

  /* Section Headers */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 1rem;
  }

  .cyber-section-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 800;
    margin: 0 0 1rem 0;
    position: relative;
    color: transparent;
    background: linear-gradient(135deg, #047857 0%, #059669 50%, #10b981 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .title-icon {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    filter: hue-rotate(120deg);
  }

  .title-icon-svg {
    width: clamp(1.25rem, 3vw, 1.75rem);
    height: clamp(1.25rem, 3vw, 1.75rem);
    color: #059669;
  }

  .title-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #059669 0%, #10b981 100%);
    filter: blur(20px);
    opacity: 0.1;
    z-index: -1;
  }

  .cyber-section-subtitle {
    font-size: clamp(0.9rem, 2.5vw, 1.125rem);
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    padding: 0 0.5rem;
  }

  .cyber-section-subtitle code {
    background: rgba(0, 255, 136, 0.1);
    color: #059669;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-weight: 600;
  }

  /* Section Spacing */
  .terminal-section,
  .skills-section,
  .experience-section,
  .projects-section,
  .certificates-section,
  .about-section {
    padding: 4rem 0;
    position: relative;
  }

  /* Contact CTA Section */
  .contact-cta-section {
    padding: 5rem 0;
    background: linear-gradient(
      135deg,
      rgba(0, 255, 136, 0.05) 0%,
      transparent 50%,
      rgba(0, 255, 136, 0.05) 100%
    );
    position: relative;
    overflow: hidden;
  }

  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin-slow {
    animation: spin-slow 8s linear infinite;
  }

  /* Dark Mode */
  @media (prefers-color-scheme: dark) {
    .cyber-section-subtitle {
      color: #9ca3af;
    }
  }

  :global(.dark) .cyber-section-subtitle {
    color: #9ca3af;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .cyber-portfolio {
      padding-top: 70px;
    }

    .section-header {
      margin-bottom: 2rem;
      padding: 0 1rem;
    }

    .cyber-section-title {
      flex-direction: column;
      gap: 0.5rem;
    }

    .terminal-section,
    .skills-section,
    .experience-section,
    .projects-section,
    .certificates-section,
    .about-section {
      padding: 3rem 0;
    }

    .contact-cta-section {
      padding: 4rem 0;
    }
  }
</style>

<script>
  // Ensure page starts at top
  window.addEventListener('beforeunload', () => {
    window.scrollTo(0, 0);
  });

  document.addEventListener('DOMContentLoaded', () => {
    // Scroll to top on page load
    window.scrollTo(0, 0);
    
    // Prevent any auto-scroll from hash or previous position
    if (window.location.hash) {
      window.location.hash = '';
    }
    
    // Force scroll to top after a brief delay to override any other scroll behavior
    setTimeout(() => {
      window.scrollTo(0, 0);
    }, 100);
  });
</script>
